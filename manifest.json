{
  "manifest_version": 3,
  "name": "正则表达式搜索",
  "version": "0.1.0",
  "description": "在Chrome浏览器中支持正则表达式的页面搜索功能",
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "action": {
    "default_popup1": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon192.png"
    },
    "default_title": "正则表达式搜索"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "128": "icons/icon192.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["styles/highlight.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "打开正则表达式搜索面板"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["src/popup/popup.html","styles/highlight.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
